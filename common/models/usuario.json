{
  "name": "Usuario",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "nombre": {
      "type": "string",
      "required": true
    },
    "apellidos": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "lista": {
      "type": "hasOne",
      "model": "ListaFamiliar",
      "foreignKey": "owner"
    },
    "solicitud": {
      "type": "hasAndBelongsToMany",
      "model": "ListaFamiliar",
      "foreignKey": ""
    },
    "ListaFamiliar": {
      "type": "belongsTo",
      "model": "ListaFamiliar",
      "foreignKey": "listaFamiliarId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "create"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "AceptarSolicitud"
    }
  ],
  "methods": {
    "prototype.AceptarSolicitud": {
      "accepts": [
        {
          "arg": "context",
          "type": "object",
          "required": true,
          "description": "Contiene el usuario logueado",
          "http": {
            "source": "context"
          }
        }
      ],
      "returns": [
        {
          "arg": "aceptaSolicitud",
          "type": "array",
          "root": true,
          "description": "Devolvemos los usuarios aceptados"
        }
      ],
      "description": "Aceptamos las solicitudes segun la id",
      "http": [
        {
          "path": "/aceptarSolicitudes",
          "verb": "put"
        }
      ]
    }
  }
}
